<%include header%>
<%include navigator%>
<div class="row col-md-5 col-md-offset-3">
    <div class="jumbotron-fluid">
        <h2 class="page-header"> Profile: <%= user.username%></h2>
        <p>Home Automation Profile:</p>
    </div>
    <form class="form-profile-update" method="POST" action="/users/update_user">
        <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" value=<%= user._id %> readonly name="userid">
        </div>

        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" value=<%= user.username %> name="username">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" value=<%= user.email %> name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password">
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password2">
        </div>
        <button type="submit" class="btn btn-warning">Submit</button>
    </form>
</div>
<%include footer%>